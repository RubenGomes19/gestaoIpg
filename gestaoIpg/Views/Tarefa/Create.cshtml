@model gestaoIpg.Models.Tarefa

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container">

        <h2>Nova Tarefa</h2>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="DescricaoTarefa" class="control-label"></label>
                        <input asp-for="DescricaoTarefa" class="form-control" />
                        <span asp-validation-for="DescricaoTarefa" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Funcionario" class="control-label"></label>
                        <select asp-for="FuncionarioId" class="form-control" asp-items="ViewBag.FuncionarioId"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Inserir" class="btn btn-success" />
                        <a asp-action="Index">Ir para Lista de Tarefas</a>

                    </div>
                </form>
            </div>
        </div>

        @*<div>
            <a asp-action="Index">Back to List</a>
        </div>*@
     </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
