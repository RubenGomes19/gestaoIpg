@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


    <ul class="nav nav-tabs" role="tablist">
        @if (SignInManager.IsSignedIn(User))
        {

            <li role="presentation"><a asp-area="" asp-controller="Home" asp-action="Index" class="active">Home</a></li>



            <li class="nav-item">
                <a class="btn btn-secondary" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Bem-vindo @User.Identity.Name! </a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="btn btn-primary">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li role="presentation"><a asp-area="" asp-controller="Home" asp-action="Index" class="active">Home</a></li>
            /*<li role="presentation">
                <a asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>*/
            <li role="presentation">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        }
    </ul>
